{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"rootDir": "./lib",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["lib/**/*"],

	"watchOptions": {
		"watchFile": "useFsEvents",
		"watchDirectory": "useFsEvents",
		"excludeDirectories": ["./dist"]
	}
}
